<main>
<p id="notice"><%= flash[:notice] %></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
      
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofoucas: true, id:"inputName", placeholder:"名前", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, for: "inputImage" %>
        <%= f.file_field :profile_image, id: "inputImage", accept: "image/*", placeholder: "プロフィール画像",class: "form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, for: "inputIntroduction" %>
        <%= f.text_area :introduction, id: "inputIntroduction",class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</main>